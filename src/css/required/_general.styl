    }
  }
}

@media (max-width: 1024px) {
  header {
    .mdl-layout__header-row {
      padding-left 15px
      padding-right 15px
    }
  }

}

@media (max-width: 991px) {
  .container {
    padding-left 0
    padding-right 0
  }
}

@media (max-width: 991px) and (min-width: 768px) {
  .mdl-cell--4-col,
  .mdl-cell--4-col-tablet {
    width calc(33% - 16px) !important;
  }
  .mdl-cell--5-col-tablet {
    width calc(42% - 16px) !important;
  }
  .mdl-cell--6-col,
  .mdl-cell--6-col-tablet.mdl-cell--6-col-tablet {
    width calc(50% - 16px) !important;
  }
  .mdl-cell--7-col-tablet {
    width calc(58% - 16px) !important;
  }
  .mdl-cell--8-col,
  .mdl-cell--8-col-tablet {
    width calc(66% - 16px) !important;
  }
  .mdl-cell--12-col-tablet {
    width calc(100% - 16px) !important;
  }
}

@media (max-width: 767px) {
  .hide-on-xs {
    display none
  }
  .visible-on-xs {
    display block
  }
  .mdl-cell--12-col-phone {
    width calc(100% - 16px) !important;
  }
  .mdl-cell--7-col-phone {
    width calc(58% - 16px) !important;
  }
  .mdl-cell--6-col-phone {
    width: calc(50% - 16px) !important;
  }
  .mdl-cell--5-col-phone {
    width calc(42% - 16px) !important;
  }

  header {
    .mdl-layout__drawer-button {
      display block !important
    }
    .mdl-layout__header-row {
      padding-left 50px
    }
  }
  .header-menu-navigation.left-menu-navigation {
    display none
  }
  .dashboard-box ,
  .lessons-box {
    > .mdl-grid {
      padding 0
      > .mdl-cell {
        margin-left 0
        margin-top 0
        margin-right 0
        width 100% !important
      }
    }
  }
  .mobile-padding-0 {
    padding 0 !important
  }
  .hidden-xs {
    display none
  }
  .visible-xs {
    display block
  }
}

.cursor-none {
  cursor default !important
