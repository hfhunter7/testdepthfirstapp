.pagination {
  display: inline-block;
  padding-left: 0;
  margin: 20px 0;
  border-radius: 4px;
  float: right;

  >li {
    display inline-block
    min-width 15px
    text-align center
    margin 5px
    border 1px solid #ebebeb
    padding 5px 10px
    font-weight 200
    border-radius 2px

    &.disabled {
      color #ccc
      a {
        cursor default !important
      }
    }
    &.active {
      background-color #0088FF
      color #fff
    }
  }
  a { cursor: pointer; }
}