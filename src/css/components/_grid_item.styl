card-padding = 20px
card-bg-color = #fff
card-link-color = color("orange", "accent-2")
card-link-color-light = #ccc

gutter-width = 1.5rem
element-top-margin = gutter-width/3;
element-bottom-margin = (gutter-width*2)/3

.z-depth-0 {
  box-shadow: none !important;
}
.z-depth-1 {
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2);
}
.z-depth-1-half {
  box-shadow: 0 3px 3px 0 rgba(0, 0, 0, 0.14), 0 1px 7px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -1px rgba(0, 0, 0, 0.2);
}
.z-depth-2 {
  box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.14), 0 1px 10px 0 rgba(0, 0, 0, 0.12), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
}
.z-depth-3 {
  box-shadow: 0 6px 10px 0 rgba(0, 0, 0, 0.14), 0 1px 18px 0 rgba(0, 0, 0, 0.12), 0 3px 5px -1px rgba(0, 0, 0, 0.3);
}
.z-depth-4 {
  box-shadow: 0 8px 10px 1px rgba(0, 0, 0, 0.14), 0 3px 14px 2px rgba(0, 0, 0, 0.12), 0 5px 5px -3px rgba(0, 0, 0, 0.3);
}
.z-depth-5 {
  box-shadow: 0 16px 24px 2px rgba(0, 0, 0, 0.14), 0 6px 30px 5px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.3);
}

.image-part {
  height: 150px;
  background-color: #ccc;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  border-bottom: 1px solid #fafafa;
}

.card-panel {
  transition: box-shadow .25s;
  padding: card-padding;
  margin: element-top-margin 0 element-bottom-margin 0;
  border-radius: 2px;
//@extend .z-depth-1;
  background-color: card-bg-color;
}

.card-header {
  border-bottom: 1px solid #ebebeb;
  width: 100%;
  padding-top: 20px;
  margin-bottom: 15px;
}

.see-more-part {
  width: 100%;
  padding-top: 20px;
  padding-bottom: 20px;
  text-align: center;
  float: left;

  .see-more {
    color: #c0c0c0;
    font-size: 12px;
  }
}

.card {
  font-family: "Roboto", sans-serif;
  position: relative;
  margin: element-top-margin 0 element-bottom-margin 0;
  background-color: card-bg-color;
  transition: box-shadow .25s;
  border-radius: 2px;
  z-index: 1;
  float: left;
  width: 100%;

//@extend .z-depth-1;
  .status {
    padding: 5px 10px;
    font-size: 12px;
    color: #fff;
    position: absolute;
    top: 5px;
    right: 5px;
    z-index: 2;
    text-transform: uppercase;

    &.hot {
      background: #cc0000;
    }
    &.new {
      background: #4c97ff;
    }
  }

  .take-exam-btn {
    color: #086378;
    padding-top: 17px;
    padding-bottom: 17px;
    font-size: 15px;
    font-weight: bold;
    width: 100%;
    background: #eceff4;
    border: none;
    cursor: pointer;
  }

  .card-title {
    font-size: 24px;
    font-weight: 300;
    &.activator {
      cursor: pointer;
    }
  }

  .detail-part {
    padding: 10px;
    font-size: 13px;
    color: #ccc;

    .title {
      font-size: 15px;
      font-weight: 500;
      margin-bottom: 10px;
      color: #000;
    }

    .icon-part {
      border-radius: 50%;
      font-size: 14px;
      background: #999;
      width: 19px;
      height: 19px;
      line-height: 19px;
      color: #fff;
      margin-right: 5px;
      text-align: center;
      margin-top: 5px;
    }

    .taken {
      color: #cc0000;

      &.icon-part {
        background: #cc0000;
        color: #fff;
      }
    }

  }

  .detail-para{
    height: 104px;
  }
  .detail-para1 {
    height: 120px;
    padding: 10px 0 30px 0;
  }
  .detail1 {
    font-size: 14px;
    line-height: 21px;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
  }

// Card Sizes
  &.small, &.medium, &.large {
    position: relative;

    .card-image {
      max-height: 60%;
      overflow: hidden;
    }
    .card-image + .card-content {
      max-height: 40%;
    }
    .card-content {
      max-height: 100%;
      overflow: hidden;
    }
    .card-action {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
    }
  }

  &.small {
    height: 300px;
  }

  &.medium {
    height: 400px;
  }

  &.large {
    height: 500px;
  }

// Horizontal Cards
  &.horizontal {
    &.small, &.medium, &.large {
      .card-image {
        height: 100%;
        max-height: none;
        overflow: visible;

        img {
          height: 100%;
        }
      }
    }

    display: flex;

    .card-image {
      max-width: 50%;
      img {
        border-radius: 2px 0 0 2px;
        max-width: 100%;
        width: auto;
      }
    }

    .card-stacked {
      display: flex;
      flex-direction: column;
      flex: 1;
      position: relative;

      .card-content {
        flex-grow: 1;
      }
    }
  }

// Sticky Action Section
  &.sticky-action {
    .card-action {
      z-index: 2;
    }

    .card-reveal {
      z-index: 1;
      padding-bottom: 64px;
    }
  }




  .card-image {
    position: relative;

  // Image background for content
    img {
      display: block;
      border-radius: 2px 2px 0 0;
      position: relative;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      width: 100%;
    }

    .card-title {
      color: card-bg-color;
      position: absolute;
      bottom: 0;
      left: 0;
      padding: card-padding;
    }

  }

  .card-content {
    padding: card-padding;
    border-radius: 0 0 2px 2px;

    p {
      margin: 0;
      color: inherit;
    }
    .card-title {
      line-height: 48px;
    }
  }

  .card-action {
    position: relative;
    background-color: inherit;
    border-top: 1px solid rgba(160,160,160,.2);
    padding: card-padding;

    /*a:not(.btn):not(.btn-large):not(.btn-floating) {
      color: card-link-color;
      margin-right: card-padding;
      transition: color .3s ease;
      text-transform: uppercase;

      &:hover {
        color: card-link-color-light;
      }
    }*/
  }

  .card-reveal {
    padding: card-padding;
    position: absolute;
    background-color: card-bg-color;
    width: 100%;
    overflow-y: auto;
    left: 0;
    top: 100%;
    height: 100%;
    z-index: 3;
    display: none;

    .card-title {
      cursor: pointer;
      display: block;
    }
  }

  .favorite-box {
    position absolute
    top 5px
    left 5px
    background-color #fff
    i {
      float left
      font-size 12px
      padding 3px
    }
  }
}
