.dashboard-analysis-section ,
.review-content-section ,
.exam-list-content-section {
  .global-content-header-box {
    .right-button-menu {
      position absolute
      top -5px
      right 0
    }
  }
}

.dashboard-analysis-content-info-box {
  .mdl-grid {
    padding 0
  }
  .dashboard-analysis-list-box {
    border 2px solid grey-bg-color
    background-color light-grey-bg
    padding 15px
    .details-box {
      h3 {
        margin-bottom 10px
      }
      p {
        font-size 14px
        margin-bottom 25px
      }
      .mdl-button {
        /*background-color orange-bg-color
        color white-bg-color*/
        width 100%
        font-size 16px
      }
    }
    &.active {
      background-color blue-dashboard-bg-color
      h3, p {
        color white-bg-color
      }
      .mdl-button {
        background-color white-bg-color
        color #000
      }
    }
  }
}

#dashboard-subject-list-dialog {
  width auto
  max-width 440px
}

.dashboard-subject-list-dialog-form {
  .modal-subject-list-box {
    margin-top 15px
  }
  .modal-subject-list-element {
    text-transform uppercase
    cursor pointer
    padding-top 15px
    padding-bottom 15px
    text-align center
    border 2px solid grey-bg-color
    background-color light-grey-bg
    &.active {
      color white-bg-color !important
      background-color green-primary-bg-color !important
    }
  }
}

/*canvas {
  width 120px
  height 120px
}*/

.dashboard-coming-soon-box {
  h3 {
    font-size 14px
  }
  .material-icons {
    font-size 64px
  }
}

.dashboard-coming-soon-subject-list-box {
  .details-box {
    h3 {
      //margin-bottom 66px !important
    }
  }
}

@media (max-width: 1024px) {
  .dashboard-analysis-content-info-box .dashboard-analysis-list-box.active .mdl-button,
  .dashboard-analysis-content-info-box .dashboard-analysis-list-box .mdl-button{
    font-size 12px !important;
  }
}

@media (max-width: 991px) {
  .choose-subjects-container h1 {
    font-size 46px
  }
}

@media (max-width: 767px) {
  .dashboard-analysis-list-box {
    max-width 360px
    margin-left auto
    margin-right auto
    .math-box {
      max-width 250px
      margin-left auto
      margin-right auto
    }
    .details-box {
      //text-align center
    }
  }
  #dashboard-subject-list-dialog {
    .mdl-dialog__title {
      font-size 32px
      padding-left 15px
      padding-right 15px
    }
    .mdl-dialog__content {
      padding-left 0
      padding-right 0
    }
  }
  .choose-subjects-list-box {
    max-width 270px
    margin-left auto
    margin-right auto
  }
  .choose-subjects-container {
    padding-left 15px
    padding-right 15px
  }
  .choose-subjects-container h1 {
    font-size 32px
  }
  .choose-subjects-container {
    padding-top 30px
    padding-bottom 30px
  }
}

@media (max-width: 790px) and (min-width: 768px) {
  .doing-exam-mode-select-button-box {
    .mobile-padding-0 {
      padding 0 !important
    }
  }
}