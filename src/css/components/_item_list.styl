@require '../required/_variable.styl'

.item-list-element-box {
  padding-left 20px
  padding-right 20px
  padding-top 10px
  padding-bottom 10px
  .item-list-button-container {
    //display none
  }
  &:hover {
    background-color grey-hover-color
    .item-list-button-container {
      display block
    }
  }
  .item-list-element-image-box {
    position relative
    height: 160px;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    border: 1px solid grey-border-color
  }
  .label-bottom {
    position: absolute;
    bottom: 0;
    color: #fff;
    background: #000;
    font-size: 14px;
    font-weight: bold;
    padding: 2px 5px;
    right: 0;
    min-width: 60px;
    text-align: center;
  }
  .item-list-element-content-box {
    padding-top 5px
    padding-bottom 5px
    h3 {
      margin-bottom 5px
    }
  }
  .details-stat-box {
    color grey-para-color
    .icon-part {
      border-radius: 50%;
      font-size: 14px;
      background: #999;
      width: 19px;
      height: 19px;
      line-height: 19px;
      color: #fff;
      margin-right: 5px;
      text-align: center;
      margin-top: 5px;
    }
  }
  .details-stat-container {
    margin-top 10px
  }
  .take-exam-btn {
    color: #086378;
    padding-top: 17px;
    padding-bottom: 17px;
    font-size: 15px;
    font-weight: bold;
    width: 200px;
    background: #eceff4;
    border: none;
    cursor: pointer;
  }
}

.item-list-button-container {
  margin-top 15px
}

.rating-icon-list-box {
  .material-icons {
    color orange-bg-color
    font-size 16px
    width 16px
  }
}









