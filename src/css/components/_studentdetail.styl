.student-details-container {
  background white

  .student-box-paper {
    color #000
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    margin auto
    width 500px
    height 530px
    padding 20px 50px 20px 50px
  }

  .student-details-box {
    .student-details-content {
      .student-profile-box{
        text-align center

        .student-avatar {
          display block
          padding-top 25px
          padding-bottom 16px
        }
        .student-name {
          margin 60px
          font-size 20px
          display initial
          letter-spacing 0.5px
          font-weight bold
        }
        .description {
          //padding-top 15px
          color gray
          font-size 12px
          letter-spacing 0.5px
        }
      }
      .input-student-details{
        padding-top 15px
        hr {
          border-bottom 1px solid rgba(0, 0, 0, 0.16) !important
        }
      }
      .start-button {
        float right
        background #4285F4
        margin-top 30px
      }
    }
  }
}